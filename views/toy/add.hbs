<form class="bg-light text-center col-md-8" action="/toy/add" method="post">
   <div>
      <h1 class="text text-primary">Add new Toy</h1>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Name</label>
      <input class="form-control" type="text" name="name" required>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Price</label>
      <input class="form-control" type="text" name="price" required>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">PicUrl</label>
      <input class="form-control" type="text" name="image" required>
   </div>   
   <div class="form-group mt-3">
      <label class="text text-success">Description</label>
      <input class="form-control" type="text" name="description" required>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Amount</label>
      <input class="form-control" type="text" name="amount" required>
   </div>
   <div class="form-group mt-3">
      <input class="btn btn-danger" type="submit" value="Add">
   </div>
</form>