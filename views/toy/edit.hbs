<form class="bg-light text-center col-md-8" action="/toy/edit/{{toy._id}}" method="post">
   <div>
      <h1 class="text text-primary">Edit toy</h1>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Name</label>
      <input class="form-control" type="text" name="name" value="{{ toy.name }}" required>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Price</label>
      <input class="form-control" type="text" name="price" value="{{ toy.price }}" required>
   </div>
     <div class="form-group mt-3">
      <label class="text text-success">picUrl</label><br>
      <img src="{{ toy.picUrl}}" width="100" height="100"><br>
      <input class="form-control" type="text" name="picUrl" value="{{ toy.picUrl }}" required>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Description</label>
      <input class="form-control" type="text" name="color" value="{{ toy.description }}" required>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Amount</label>
      <input class="form-control" type="number" name="amount" value="{{ toy.amount }}" required>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Date and time</label>
      <input class="form-control" type="datetime-local" name="dateandtime" value="{{ toy.dateandtime }}" required>
   </div>
<div class="form-group mt-3">
   <label class="text text-success">Category</label>
   <select class="form-control" name="category" id="category">
      <option value="XS">XS</option>
      <option value="X">X</option>
      <option value="XX">XX</option>
      <option value="XXS">XXS</option>
   </select>
</div>
   <div class="form-group mt-3">
      <input class="btn btn-danger" type="submit" value="Edit">
   </div>
</form>