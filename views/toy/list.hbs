<h1 class="text text-warning mb-2 text-center">Toy Store</h1>
<div class="card-group text-center">
   <div class="row">
      {{#each toys }}
      <div class="card col-md-2 m-3">
         <img class="card-img-top mt-3" src="{{ picUrl }}" width="180" height="150">
         <div class="card-body">
            <h4 class="card-title text-success">{{ name }}</h4>
            <h3 class="card-title text-danger">${{ price }}</h3>
            <p class="fw-bold card-text text-primary">{{ description }}</p>
            <form action="/toy/order" method="post">
               <input type="hidden" name="id" value="{{_id}}"> 
               <input type="hidden" name="price" value="{{price}}">
               <input class="form-control mb-3" type="number" name="order_amount" 
               min="1" max="{{amount}}">
               <input class="btn btn-danger" type="submit" value="Order">
            </form>
         </div>
      </div>
      {{/each}}
   </div>
</div>