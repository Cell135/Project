<form class="bg-light text-center col-md-8" action="/toycar/edit/{{toycar._id}}" method="post">
   <div>
      <h1 class="text text-primary">Edit toy</h1>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Name</label>
      <input class="form-control" type="text" name="name" value="{{ toycar.name }}" required>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Brand</label>
      <input class="form-control" type="text" name="brand" value="{{ toycar.brand }}" required>
   </div>
     <div class="form-group mt-3">
      <label class="text text-success">image</label><br>
      <img src="{{ toycar.image}}" width="100" height="100"><br>
      <input class="form-control" type="text" name="image" value="{{ toycar.image }}" required>
   </div>
   <div class="form-group mt-3">
      <label class="text text-success">Price</label>
      <input class="form-control" type="number" name="price" value="{{ toycar.price }}" required>
   </div>
   <div class="form-group mt-3">
      <input class="btn btn-danger" type="submit" value="Edit">
   </div>
</form>